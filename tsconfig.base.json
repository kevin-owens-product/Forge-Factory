{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@forge/auth": ["packages/auth/src/index.ts"],
      "@forge/billing": ["packages/billing/src/index.ts"],
      "@forge/cache": ["packages/cache/src/index.ts"],
      "@forge/compliance": ["packages/compliance/src/index.ts"],
      "@forge/database": ["packages/database/src/index.ts"],
      "@forge/design-system": ["packages/design-system/src/index.ts"],
      "@forge/errors": ["packages/errors/src/index.ts"],
      "@forge/feature-flags": ["packages/feature-flags/src/index.ts"],
      "@forge/i18n": ["packages/i18n/src/index.ts"],
      "@forge/notifications": ["packages/notifications/src/index.ts"],
      "@forge/prisma": ["packages/prisma/src/index.ts"],
      "@forge/queue": ["packages/queue/src/index.ts"],
      "@forge/roles": ["packages/roles/src/index.ts"],
      "@forge/approvals": ["packages/approvals/src/index.ts"],
      "@forge/sandbox": ["packages/sandbox/src/index.ts"],
      "@forge/search": ["packages/search/src/index.ts"],
      "@forge/shared-types": ["packages/shared-types/src/index.ts"],
      "@forge/siem": ["packages/siem/src/index.ts"],
      "@forge/sso": ["packages/sso/src/index.ts"],
      "@forge/storage": ["packages/storage/src/index.ts"],
      "@forge/webhooks-outbound": ["packages/webhooks-outbound/src/index.ts"],
      "@forge/white-label": ["packages/white-label/src/index.ts"],
      "@forge/multi-region": ["packages/multi-region/src/index.ts"],
      "@forge/analytics": ["packages/analytics/src/index.ts"],
      "@forge/ip-allowlist": ["packages/ip-allowlist/src/index.ts"],
      "@forge/realtime": ["packages/realtime/src/index.ts"],
      "@forge/import": ["packages/import/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
