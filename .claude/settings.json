{
  "$schema": "https://claude.ai/schemas/settings.json",
  "version": "1.0.0",
  "project": {
    "name": "Forge Factory",
    "description": "Enterprise SaaS Platform with AI-First Development",
    "type": "monorepo"
  },
  "autonomous": {
    "enabled": true,
    "mode": "full",
    "features": {
      "auto_commit": false,
      "auto_push": false,
      "auto_test": true,
      "auto_lint": true,
      "auto_format": true
    },
    "safety": {
      "require_human_review": [
        "authentication",
        "payment",
        "security",
        "encryption",
        "data_migration"
      ],
      "max_files_per_operation": 50,
      "require_test_coverage": 80,
      "block_on_security_issues": true
    }
  },
  "hooks": {
    "directory": ".claude/hooks",
    "enabled": true
  },
  "skills": {
    "directory": ".claude/skills",
    "enabled": true,
    "autoload": true
  },
  "prompts": {
    "directory": "tools/prompts",
    "version": "v4.1"
  },
  "codeGeneration": {
    "traceability": true,
    "promptIdFormat": "forge-v4.1:{category}:{feature}:{sequence}",
    "requirePromptId": true,
    "model": "claude-opus-4-5"
  },
  "qualityGates": {
    "lint": {
      "command": "pnpm lint",
      "required": true
    },
    "typeCheck": {
      "command": "pnpm type-check",
      "required": true
    },
    "test": {
      "command": "pnpm test",
      "required": true,
      "coverageThreshold": 80
    },
    "security": {
      "command": "pnpm security:scan",
      "required": true
    },
    "circularDeps": {
      "command": "pnpm check:circular",
      "required": true
    }
  },
  "adrIntegration": {
    "directory": "tools/adrs",
    "indexFile": ".claude/adr-index.json",
    "autoIndex": true
  },
  "packages": {
    "scopeName": "@forge",
    "directory": "packages",
    "template": ".claude/templates/package"
  },
  "features": {
    "directory": "apps",
    "template": ".claude/templates/feature"
  }
}
