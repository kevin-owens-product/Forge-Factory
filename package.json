{
  "name": "@forge/factory",
  "version": "1.0.0",
  "private": true,
  "description": "The Forge Factory - Enterprise SaaS Platform",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nx run-many --target=dev --parallel=3",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "test:unit": "vitest",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:a11y": "nx run-many --target=test:a11y --all",
    "test:property": "nx run-many --target=test:property --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "verify": "pnpm lint && pnpm typecheck && pnpm test && pnpm test:e2e",
    "lighthouse": "lhci autorun",
    "migrate": "nx run prisma:migrate:deploy",
    "migrate:dev": "nx run prisma:migrate:dev",
    "prisma:generate": "nx run prisma:generate",
    "prisma:studio": "nx run prisma:studio",
    "clean": "nx reset && rm -rf node_modules **/node_modules **/.next **/dist",
    "graph": "nx graph",
    "affected": "nx affected",
    "generate": "nx generate"
  },
  "devDependencies": {
    "@nx/devkit": "19.8.4",
    "@nx/eslint": "19.8.4",
    "@nx/jest": "19.8.4",
    "@nx/js": "19.8.4",
    "@nx/node": "19.8.4",
    "@nx/react": "19.8.4",
    "@nx/vite": "19.8.4",
    "@nx/web": "19.8.4",
    "@nx/workspace": "19.8.4",
    "@playwright/test": "^1.45.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.6.0",
    "axe-core": "^4.9.0",
    "axe-playwright": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "fast-check": "^3.19.0",
    "happy-dom": "^14.12.0",
    "lighthouse": "^12.1.0",
    "msw": "^2.3.0",
    "nx": "19.8.4",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0",
    "vite": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ]
}
